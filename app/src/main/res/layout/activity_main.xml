<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/illustration"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.15"
        android:id="@+id/illustration"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/illustration"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="50dp"
        android:text="Enable the power of GPT Ai on your mobile device, AskGPT now!"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textAlignment="center"
        android:paddingRight="50dp"
        android:paddingLeft="50dp"
        android:id="@+id/textDesc"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Terms &amp; Privacy Policy"
        app:layout_constraintTop_toBottomOf="@id/textDesc"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="80dp"
        android:id="@+id/textPolicy"/>
    <com.google.android.material.button.MaterialButton
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:text="Start Chatting"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/textPolicy"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.3"
        android:id="@+id/buttonStart"
        android:textColor="@color/white"/>

    <androidx.cardview.widget.CardView
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:cardCornerRadius="30dp"
        app:cardElevation="0dp"
        app:cardBackgroundColor="#0000FFFF"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="20dp"
        android:clickable="true"
        android:id="@+id/cardBack"
        android:foreground="?attr/selectableItemBackgroundBorderless"
        android:layout_marginLeft="15dp">
        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_gravity="center"
            android:id="@+id/cardBackImage"
            android:src="@drawable/back"/>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        app:cardBackgroundColor="#0000FFFF"
        app:cardElevation="0dp"
        app:layout_constraintTop_toBottomOf="@id/illustration"
        android:layout_height="wrap_content"
        android:layout_marginTop="-80dp"
        android:id="@+id/cardContinue">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <EditText
                android:layout_width="300dp"
                android:layout_height="45dp"
                android:inputType="textEmailAddress"
                android:maxLines="1"
                android:maxLength="55"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:id="@+id/emailEditText"
                android:background="@drawable/edittext"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:hint="Email or Phone no."
                android:textSize="14sp"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/buttonContinue"
                android:layout_width="300dp"
                android:layout_height="60dp"
                android:layout_marginTop="28dp"
                android:text="Continue"
                android:textColor="@color/white"
                android:textStyle="bold"
                app:layout_constraintHorizontal_bias="0.505"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/emailEditText" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/buttonContinue"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginTop="40dp"
                android:orientation="horizontal"
                android:id="@+id/layoutSeprator">
                <androidx.cardview.widget.CardView
                    android:layout_width="90dp"
                    android:layout_height="0.5dp"
                    app:cardElevation="0dp"
                    android:layout_marginTop="6dp"
                    app:cardBackgroundColor="#525252"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="    OR    "
                    android:textSize="8dp"
                    android:textColor="#525252"/>
                <androidx.cardview.widget.CardView
                    android:layout_width="90dp"
                    android:layout_height="0.5dp"
                    android:layout_marginTop="6dp"
                    app:cardElevation="0dp"
                    app:cardBackgroundColor="#525252"/>
            </LinearLayout>
            <androidx.cardview.widget.CardView
                android:layout_width="300dp"
                android:layout_height="55dp"
                app:cardCornerRadius="10dp"
                app:cardElevation="5dp"
                android:id="@+id/googleCard"
                app:cardBackgroundColor="#EDEDED"
                android:clickable="true"
                android:foreground="?attr/selectableItemBackgroundBorderless"
                app:layout_constraintTop_toBottomOf="@id/layoutSeprator"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginTop="40dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintVertical_bias="0"
                android:layout_marginBottom="50dp">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/google"
                    android:layout_gravity="center_vertical|start"
                    android:layout_marginStart="20dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Continue with Google"
                    android:textStyle="bold"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="70dp"/>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="300dp"
                android:layout_height="55dp"
                app:cardCornerRadius="10dp"
                app:cardElevation="5dp"
                android:id="@+id/facebookCard"
                app:cardBackgroundColor="#1877F2"
                app:layout_constraintTop_toBottomOf="@id/googleCard"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginTop="20dp"
                android:clickable="true"
                android:foreground="?attr/selectableItemBackgroundBorderless"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintVertical_bias="0"
                android:layout_marginBottom="50dp">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/facebook"
                    android:layout_gravity="center_vertical|start"
                    android:layout_marginStart="20dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Continue with Facebook"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="70dp"/>
            </androidx.cardview.widget.CardView>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/illustration"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="-50dp"
        app:cardElevation="0dp"
        android:visibility="gone"
        android:id="@+id/cardSignup"
        app:cardBackgroundColor="#0000FFFF">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <EditText
                android:layout_width="300dp"
                android:layout_height="45dp"
                android:inputType="textPersonName"
                android:maxLines="1"
                android:maxLength="55"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:id="@+id/firstnameEditText"
                android:background="@drawable/edittext"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:hint="First Name"
                android:textSize="14sp"/>
            <EditText
                android:layout_width="300dp"
                android:layout_height="45dp"
                android:inputType="textPersonName"
                android:maxLines="1"
                android:layout_marginTop="14dp"
                android:maxLength="55"
                app:layout_constraintTop_toBottomOf="@id/firstnameEditText"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:id="@+id/lastnameEditText"
                android:background="@drawable/edittext"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:hint="Last Name"
                android:textSize="14sp"/>
            <EditText
                android:layout_width="300dp"
                android:layout_height="45dp"
                android:inputType="textPassword"
                android:maxLines="1"
                android:layout_marginTop="14dp"
                android:maxLength="55"
                app:layout_constraintTop_toBottomOf="@id/lastnameEditText"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:id="@+id/passwordEditText"
                android:background="@drawable/edittext"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:hint="Password"
                android:textSize="14sp"/>
            <EditText
                android:layout_width="300dp"
                android:layout_height="45dp"
                android:inputType="textPassword"
                android:maxLines="1"
                android:layout_marginTop="14dp"
                android:maxLength="55"
                app:layout_constraintTop_toBottomOf="@id/passwordEditText"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:id="@+id/confirmpassEditText"
                android:background="@drawable/edittext"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:hint="Confirm Password"
                android:textSize="14sp"/>
            <com.google.android.material.button.MaterialButton
                android:layout_width="300dp"
                android:layout_height="60dp"
                android:text="Continue"
                android:textStyle="bold"
                app:layout_constraintTop_toBottomOf="@id/confirmpassEditText"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginTop="30dp"
                android:id="@+id/btnSignup"
                android:textColor="@color/white"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:id="@+id/cardSplash"
        android:visibility="gone"
        android:layout_height="match_parent">
        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="#0000FFFF"
            app:cardElevation="0dp"
            android:id="@+id/cogwheel"
            android:layout_gravity="center">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"

                android:src="@drawable/logoback"/>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="#0000FFFF"
            app:cardElevation="0dp"
            android:id="@+id/cardAi"
            android:layout_gravity="center">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/logofront"
                android:layout_gravity="center"/>
        </androidx.cardview.widget.CardView>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:id="@+id/cardLoad"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:cardElevation="200dp"
        app:cardCornerRadius="60dp" >
        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"/>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>